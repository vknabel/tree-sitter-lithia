{
  "name": "tree-sitter-lithia",
  "version": "0.1.0",
  "description": "Tree-sitter-grammar for Lithia",
  "main": "bindings/node",
  "scripts": {
    "test": "tree-sitter generate && tree-sitter test",
    "gen": "tree-sitter generate",
    "ui": "tree-sitter build-wasm && tree-sitter web-ui"
  },
  "author": "Valentin Knabel <dev@vknabel.com>",
  "license": "MIT",
  "keywords": [
    "tree-sitter",
    "grammar",
    "lithia"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/vknabel/tree-sitter-lithia"
  },
  "dependencies": {
    "nan": "^2.15.0"
  },
  "devDependencies": {
    "tree-sitter-cli": "^0.20.0"
  },
  "tree-sitter": [
    {
      "scope": "source.lithia",
      "file-types": [
        "lithia"
      ],
      "first-line-regex": "#!-*\\blithia$"
    }
  ]
}